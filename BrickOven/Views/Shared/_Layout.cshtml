<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row header text-center">
        <div class="col-sm-12">
            <h1>Car Finder</h1>
            <!--
            <ul>
                <li> <a href="#"> Alpha </a></li>
                <li> <a href="#"> Beta  </a></li>
                <li> <a href="#"> Gamma </a></li>
            </ul>
            -->
        </div>
    </div>
    @RenderBody()
    <div class="row header text-center">
        <div class="col-sm-12">
            <img src="~/Content/car.png" style="filter: invert(100%);
                                        -moz-filter: invert(100%);
                                        -webkit-filter: invert(100%)" />
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-strap.min.js"></script>
    <script src="~/Scripts/angular-strap.tpl.min.js"></script>
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/main.factory.js"></script>
    <script src="~/Scripts/app/main.ctrl.js"></script>
</body>
</html>
